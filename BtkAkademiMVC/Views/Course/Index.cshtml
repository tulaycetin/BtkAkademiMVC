@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <h6 class="disply-6"> Başvuranlar (@Model.Count())</h6>
    <table class="table table-hover table-striped">
        <thead>
            <tr>

                <td>Adı</td>
                <td>Soyadı</td>
                <td>Yaş</td>
                <td>Seçilen Kurs</td>
                <td>Mail</td>
                <td>Tarih</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Candidate item in Model)
            {
                <tr>
                    <td>@item.FirtName</td>
                    <td>@item.LastName</td>
                    <td>@item.Age</td>
                    <td>@item.SelectedCourse</td>
                    <td>@item.Email</td>
                    <td>@item.ApplayAt</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="aler alert-info">
        Henuz kayıt yapılamadı. Lütfen Başvuru için tıklayın
        <a class="aler-link" asp-action="Apply">apply.</a>
    </div>
}


